<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.example.newandroidxcomponentsdemo.ui.main.news.NewsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#9FA8DA"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_top"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".1" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/news_rv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/controller"
            app:layout_constraintTop_toTopOf="@id/guide_top"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/row_item_news"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
        <LinearLayout
            android:id="@+id/controller"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/settings"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/stop"
                android:text="stop"
                android:onClick="@{()->viewmodel.stopBreakingNews()}"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/resume"
                android:text="resume"
                android:onClick="@{()->viewmodel.getBreakingNews()}"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/reset"
                android:text="reset"
                android:layout_margin="1dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/settings"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/decrease_news_count"
                android:text="-"
                android:onClick="@{()->viewmodel.stopBreakingNews()}"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/news_count"
                android:text="@={viewmodel.newsCount}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/increase_news_count"
                android:text="+"
                android:onClick="@{()->viewmodel.getBreakingNews()}"
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>